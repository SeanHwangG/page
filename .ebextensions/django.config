container_commands:
  01_migrate:
    command: "source /usr/lib64/python3.8/venv/scripts/common/activate && python manage.py migrate --noinput"
    leader_only: true
  02_createsu:
    command: "source /usr/lib64/python3.8/venv/scripts/common/activate && python manage.py createsu"
    leader_only: true
  03_collectstatic:
    command: "source /usr/lib64/python3.8/venv/scripts/common/activate && python manage.py collectstatic --noinput"

option_settings:
  "aws:elasticbeanstalk:application:environment":
    DJANGO_SETTINGS_MODULE: "classroom.settings"
    PYTHONPATH: "./src"
  "aws:elasticbeanstalk:container:python":
    WSGIPath: classroom/wsgi.py
    NumProcesses: 3
    NumThreads: 20